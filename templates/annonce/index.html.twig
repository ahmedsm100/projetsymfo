{% extends 'base.html.twig' %}

{% block title %}Annonce index{% endblock %}

{% block body %}
    <h1>Annonce index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Marque</th>
                <th>Modele</th>
                <th>Annee</th>
                <th>Kilometrage</th>
                <th>Prix</th>
                <th>Hearts</th>
                <th>Shits</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for annonce in annonces %}
            <tr>
                <td>{{ annonce.id }}</td>
                <td>{{ annonce.marque }}</td>
                <td>{{ annonce.modele }}</td>
                <td>{{ annonce.annee }}</td>
                <td>{{ annonce.kilometrage }}</td>
                <td>{{ annonce.prix }}</td>
                <td>{{ annonce.hearts }}</td>
                <td>{{ annonce.shits }}</td>
                <td>
                    <a href="{{ path('app_annonce_show', {'id': annonce.id}) }}">show</a>
                    <a href="{{ path('app_annonce_edit', {'id': annonce.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_annonce_new') }}">Create new</a>
